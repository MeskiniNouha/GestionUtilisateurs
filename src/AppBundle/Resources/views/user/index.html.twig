{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="text-align: center;font-family: 'Arial Black';">Users list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.username }}</a></td>
                <td>{{ user.email }}</td>
                <td>
   <a class="btn btn-success" href="{{ path('user_show', { 'id': user.id }) }}"><span class="glyphicon glyphicon-info-sign"></span>SHOW USER</a>
   <a class="btn btn-success" href="{{ path('user_edit', { 'id': user.id }) }}"><span class="glyphicon glyphicon-pencil"></span>EDIT USER</a>

                   
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     
             <a class="btn btn-primary btn-block" href="{{ path('user_new') }}">Create a new user</a>
{% endblock %}
